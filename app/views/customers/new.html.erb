<% provide(:title, t('rr')) %>
<h1>Sign up</h1>


<div class="page-content">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@customer) do |f| %>
      <%= render 'shared/error_messages' %>

      <label for="qc-email"><%= t("form.in") %></label>
      <%= f.text_field :name, class: 'form-control' %>

      <label for="qc-email">lastname</label>
      <%= f.text_field :last_name, class: 'form-control' %>

      <label for="qc-email">phone</label>
      <%= f.text_field :phone, class: 'form-control' %>

      <label for="qc-email">city</label>
      <%= f.text_field :city, class: 'form-control' %>

      <label for="qc-email">zipcode</label>
      <%= f.text_field :zip_code, class: 'form-control' %>

      <label for="qc-email">address</label>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>

      <label for="qc-email"><%= t("form.hp") %></label>
      <%= f.password_field :password, class: 'form-control' %>

      <label for="qc-email"><%= t("form.pc") %></label>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </br>

      <%= f.submit "Create my account", class: "btn btn-primary" %>

    <% end %>
  </br>
  </div>
</div>
</div>

